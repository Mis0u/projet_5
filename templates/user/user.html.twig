{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block classBody %}userProfile{% endblock %}


{% block body %}
<aside>
    <img class="rocket" src="/asset/icons/fusee.svg" alt="logo fusée espace nasa">
    <div class="content">
        <ul>
            <li><a href="{{ path('add_image') }}">Ajouter une image</a></li>
            <li><a href="{{ path('display_images') }}">Afficher mes images</a></li>
        </ul>
    </div>
</aside>
<section class="info">
    <article class="dashboard">
        <h1> Web-astronaut :{{ user.username }} </h1>
        <div class="images">
            <p> Vous avez publié {{ user.images|length }} photos</p>
            <p>Vos dernières images publiées :</p>
            <div class="last-images">
                {% for lastImages in user.images|slice(-3) %}
                <img src="{{ lastImages.name }}" class="img-thumbnail">
                {% endfor %}
                
            </div>

        </div>

    </article>
    {% if is_granted('ROLE_ADMIN') %}
    <p class="admin-btn btn "><a href="{{path('admin')}}">Administration</a></p>
    {% endif %}
</section>
{% endblock %}

{% block javascript %}
<script src="/js/moveAside.js"></script>
{% endblock %}